@model List<MDL.ClassMdl>
@{
    int SerialNo = 1;
}
<div class="table-responsive">
    <table class="table table-bordered mb-0">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">Sr.No.</th>

                <th class="text-center">Company Name</th>
                <th class="text-center">Class Name</th>
                <th class="text-center">Monthly Fee</th>
                <th class="text-center">Status</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="14">
                        <div class="text-danger">No Record Found</div>
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr valign="middle">
                        <td class="text-center">@SerialNo</td>
                        <td class="text-center">@item.CompName</td>
                        <td class="text-center">@item.ClassName</td>
                        <td class="text-center">@item.MonthlyFee</td>
                        @if (item.IsActive)
                        {
                            <td align="center">Active</td>
                        }
                        else
                        {
                            <td align="center">InActive</td>
                        }
                        <td class="text-center">
                            @*@if (ViewBag.CanEdit)
                                {*@
                            <a data-original-title="Edit" data-placement="bottom" data-toggle="tooltip" href=@Url.Action("AddEditClass", new { id = item.ClassId }) class="btn btn-primary btn-sm">Edit</a>
                            @*}*@
                        </td>
                    </tr>
                    SerialNo++;
                }
            }
        </tbody>
    </table>
</div>
