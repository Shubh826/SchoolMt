@model MDL.StudentFeeDetailsMDL

@{
    ViewBag.Title = "AddBulkStudentDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="page-heading mb-0">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Add Student Fee Details</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Add Student Fee Details</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-content">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-8 offset-lg-1">
                    @*<form class="form form-horizontal">*@
                    <div class="form-body">
                        <div class="row">
                            @using (Html.BeginForm("ValidateExcelData", "StudentFeeDetails", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {

                                <div class="col-md-12 col-sm-12">
                                    @Html.ActionLink("Download Format", "DownloadFile", "StudentFeeDetails", new { @class = "btn btn-primary" })
                                </div>

                                <div class="col-md-3">
                                    <label class="setForm bold">Upload File<span style="color:red">*</span></label>
                                </div>
                                <div class="col-md-7 form-group">
                                    @Html.TextBoxFor(E => E.ExcelFile, new { @type = "file", @class = "form-control" })
                                    @Html.ValidationMessageFor(E => E.ExcelFile)
                                    @*@Html.ValidationMessageFor(E => E.FK_CompanyId, "", new { @class = "redText", @style = "color:red" })*@
                                </div>
                                <div class="form-group btnShowDIv">
                                    <div class="col-md-12 text-right">
                                        <button type="submit" id="btnsubmitBulk" class="btn btn-primary">Submit</button>
                                        <a href='@Url.Action("Index")' class="btn btn-primary">Cancel</a>

                                    </div>
                                </div>

                            }

                        </div>
                    </div>
                    @*</form>*@
                </div>
            </div>
        </div>
    </div>
</div>



