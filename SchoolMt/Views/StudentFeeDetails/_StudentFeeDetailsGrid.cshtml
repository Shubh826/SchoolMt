
@model IEnumerable<MDL.StudentFeeDetailsMDL>
@{
    var objPagingmdl = (MDL.Common.BasicPagingMDL)ViewBag.paging;
    int SerialNo = (objPagingmdl.CurrentPage - 1) * objPagingmdl.RowParPage + 1;

}

<div class="col-md-12">
    <div class="table-responsive">
        <table cellspacing="0" cellpadding="0" border="0" class="table table-bordered table-hover" id="data">
            <thead>
                <tr>
                    <th class="text-center">Sr. No.</th>
                    <th class="text-center">Student Name</th>
                    <th class="text-center">Father Name</th>
                    <th class="text-center">Mobile No.</th>
                    <th class="text-center">Class Name</th>
                    <th class="text-center">Address</th>
                    <th class="text-center">Admission Fee</th>
                    <th class="text-center">Admission Date</th>
                    <th class="text-center">April Fee</th>
                    <th class="text-center">April Trans Fee</th>
                    <th class="text-center">May Fee</th>
                    <th class="text-center">May Trans Fee</th>
                    <th class="text-center">June Fee</th>
                    <th class="text-center">June Trans Fee</th>
                    <th class="text-center">July Fee</th>
                    <th class="text-center">July Trans Fee</th>
                    <th class="text-center">August Fee</th>
                    <th class="text-center">August Trans Fee</th>
                    <th class="text-center">September Fee</th>
                    <th class="text-center">September Trans Fee</th>
                    <th class="text-center">October Fee</th>
                    <th class="text-center">October Trans Fee</th>
                    <th class="text-center">November Fee</th>
                    <th class="text-center">November Trans Fee</th>
                    <th class="text-center">December Fee</th>
                    <th class="text-center">December Trans Fee</th>
                    <th class="text-center">January Fee</th>
                    <th class="text-center">January Trans Fee</th>
                    <th class="text-center">February Fee</th>
                    <th class="text-center">February Trans Fee</th>
                    <th class="text-center">March Fee</th>
                    <th class="text-center">March Trans Fee</th>
                    <th class="text-center">Examination Fee 1</th>
                    <th class="text-center">Examination Fee 2</th>
                    <th class="text-center">Previous Due Amount</th>
                    <th class="text-center">Status</th>
                    @*<th class="text-center">Action</th>*@
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="38">
                            <div class="text-danger">No Record Found</div>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@SerialNo</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.StudentName)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.FatherName)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.MobileNo)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.ClassName)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.Address)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.AdmissionFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.AdmissionDate)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.AprilFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.AprilTrnsFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.MayFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.MayTrnsFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.JuneFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.JuneTrnsFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.JulyFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.JulyTrnsFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.AugustFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.AugustTrnsFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.SeptemberFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.SeptemberTrnsFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.OctoberFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.OctoberTrnsFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.NovemberFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.NovemberTrnsFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.DecemberFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.DecemberTrnsFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.JanuaryFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.JanuaryTrnsFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.FebruaryFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.FebruaryTrnsFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.MarchFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.MarchTrnsFee)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.ExaminationFee1)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.ExaminationFee2)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.PreviousDueAmount)</td>

                            @if (item.IsActive)
                            {
                                <td class="text-center">Active</td>
                            }
                            else
                            {
                                <td class="text-center">Inactive</td>
                            }

                            @*<td class="text-center">
                                <a class="btn btn-primary" href="@Url.Action("AddEditStudent", new { id = item.PK_StudentFeeDtlId })">Edit</a>
                            </td>*@
                        </tr>
                        SerialNo++;
                    }
                }
            </tbody>

        </table>
    </div>
</div>

@Html.Partial("_Paging", (MDL.Common.BasicPagingMDL)ViewBag.paging)
<link rel="stylesheet" type="text/css" href="~/assets/lib/datatables/css/dataTables.bootstrap.min.css" />
<script src="~/assets/lib/datatables/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="~/assets/lib/datatables/js/dataTables.bootstrap.min.js" type="text/javascript"></script>
