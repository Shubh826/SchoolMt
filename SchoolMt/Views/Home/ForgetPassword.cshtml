
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - True Sunshine Academy Portal</title>
    @*Mazer Admin Dashboard*@
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/assets/vendors/bootstrap-icons/bootstrap-icons.css">
    <link rel="stylesheet" href="~/assets/css/style-bod.css">
    <link rel="shortcut icon" href="~/assets/images/favicon.png" type="image/x-icon">
</head>

<body class="bg-white">
    <div id="auth">
        <div class="row h-100">
            <div class="col-lg-6 offset-lg-1 d-none d-lg-block">
                <div id="auth-right" class="d-flex align-items-center">
                    <h1 class="text-center font-light">
                        “Fastest way to <br>
                        hire and deploy <span class="text-purple font-bold">Bench</span> resources”
                    </h1>
                </div>
            </div>
            <div class="col-lg-5 col-12">
                <div id="auth-left">
                    <div id="msgDiv">
                        @if (ViewBag.Message != null && (ViewBag.Message) == "Success")
                        {
                            <div id="myAlert" class="alert alert-success">
                                <a href="javascript:void(0)" class="close" data-dismiss="alert" aria-label="close" onclick="DivHide()">&times;</a>
                                <strong>@ViewBag.Message</strong>
                            </div>
                        }
                        else
                        {
                            if (ViewBag.Message != null)
                            {
                                <div id="myAlert" class="alert alert-danger">
                                    <a href="javascript:void(0)" class="close" data-dismiss="alert" aria-label="close" onclick="DivHide()">&times;</a>
                                    <strong> @ViewBag.Message</strong>
                                </div>
                            }
                        }
                    </div>
                    <div class="auth-logo"> <a href="http://erp.truesunshineacademy.com/"><img src="~/assets/images/logo/logo.png" alt="Logo"></a> </div>
                    <h1 class="auth-title">Log in</h1>
                    <p class="auth-subtitle mb-4">Welcome to Bench on Demand</p>
                    @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post, new { @class = "form form-horizontal" }))
                    {
                        <form>
                            <div class="form-group position-relative has-icon-left mb-4">
                                @Html.TextBox("EmailID", "", new { @class = "form-control form-control-xl", @type = "email", @placeholder = "Email" })
                                @*<input type="email" class="form-control form-control-xl" placeholder="Email">*@
                                <div class="form-control-icon"> <i class="bi bi-envelope"></i> </div>
                            </div>
                            <button class="btn btn-primary btn-block btn-lg shadow-lg mt-4">Send</button>
                        </form>
                    }
                    <div class="text-center mt-4 text-lg fs-5">
                        <p class='text-gray-600'>Remember your account? <a href="@Url.Action("Login","Home")">Log in</a> </p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
</html>
<script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>

<script type="text/javascript">
    setTimeout(function () {
        $('#msgDiv').fadeOut('fast');
    }, 2000);
</script>