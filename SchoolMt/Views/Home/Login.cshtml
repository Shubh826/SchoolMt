@model MDL.LoginMDL
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - True Sunshine Academy Portal</title> @*Mazer*@
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/assets/vendors/bootstrap-icons/bootstrap-icons.css">
    <link rel="stylesheet" href="~/assets/css/style-bod.css">
    <link rel="shortcut icon" href="~/assets/images/favicon.png" type="image/x-icon">
</head>

<body class="bg-white">
    <div id="auth">
        <div class="row h-100">
            <div class="col-lg-6 offset-lg-1 d-none d-lg-block">
                <div id="auth-right" class="d-flex align-items-center">
                    @*<a href="http://erp.truesunshineacademy.com/"><img src="~/assets/images/logo/logo.png" alt="Logo"></a>*@
                    @*<h1 class="text-center font-light">
                            “Fastest way to <br>
                            hire and deploy <span class="text-purple font-bold">Bench</span> resources”
                        </h1>*@
                </div>
            </div>
            <div class="col-lg-5 col-12">
                <div id="auth-left">
                    @*<div class="auth-logo"> <a href="http://erp.truesunshineacademy.com/"><img src="~/assets/images/logo/logo.png" alt="Logo"></a> </div>*@
                    <div id="msgDiv">
                        @*@if (ViewBag.Message != null && ViewBag.Message_Id != 0)
                            {
                                <div id="myAlert" class="alert alert-success">
                                    <a href="javascript:void(0)" class="close" data-dismiss="alert" aria-label="close" onclick="DivHide()">&times;</a>
                                    <strong>@ViewBag.Message</strong>
                                </div>
                            }
                            else
                            {*@
                        @if (ViewBag.Message != null)
                        {
                            <div id="myAlert" class="alert alert-danger">
                                <a href="javascript:void(0)" class="close" data-dismiss="alert" aria-label="close" onclick="DivHide()">&times;</a>
                                <strong> @ViewBag.Message</strong>
                            </div>
                        }

                    </div>

                    <h1 class="auth-title">Log in</h1>
                    <p class="auth-subtitle mb-4">Welcome to True Sunshine</p>
                    <form id="js-login" method="post" novalidate="novalidate">
                        @using (Html.BeginForm("Login", "account", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            <div class="form-group position-relative has-icon-left mb-4">
                                @*@Html.TextBox("txtUserName", null, new { @class = "form-control form-control-xl", @placeholder = "Username" })*@
                                @*<input type="text" class="form-control form-control-xl" placeholder="Username">*@

                                @Html.TextBoxFor(E => E.UserName, new { @class = "form-control form-control-xl", @placeholder = "User Name", @maxlength = "30", })
                                @Html.ValidationMessageFor(E => E.UserName)
                                <div class="form-control-icon"> <i class="bi bi-person"></i> </div>
                            </div>
                            <div class="form-group position-relative has-icon-left mb-4">
                                @*@Html.Password("txtPassword", null, new { @class = "form-control form-control-xl", @placeholder = "Password" })*@
                                @*<input type="password" class="form-control form-control-xl" placeholder="Password">*@
                                @Html.PasswordFor(E => E.Password, new { value = Model.Password, @class = "form-control form-control-xl", @placeholder = "Password", @maxlength = "50" })
                                @Html.ValidationMessageFor(E => E.Password)

                                <div class="form-control-icon"> <i class="bi bi-shield-lock"></i> </div>
                            </div>
                            <div class="form-check form-check-lg d-flex align-items-end">
                                @Html.CheckBox("RememberMe", new { @class = "form-check-input me-2", @id = "flexCheckDefault", @type = "checkbox" })
                                <label class="form-check-label text-gray-600" for="flexCheckDefault"> Keep me logged in </label>
                            </div>
                            <button id="btnLogin" name="btnLogin" class="btn btn-primary btn-block btn-lg shadow-lg mt-4">Log in</button>
                        }
                    </form>
                    <div class="text-center mt-4 text-lg fs-5">
                        <p class="text-gray-600">
                            Don't have an account? <a href="@Url.Action("SignUp","Home")">
                                Sign
                                up
                            </a>.
                        </p>
                        <p><a href="@Url.Action("ForgetPassword","Home")">Forgot password?</a>.</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
</html>