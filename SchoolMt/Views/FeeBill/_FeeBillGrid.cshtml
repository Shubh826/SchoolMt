@model List<MDL.FeeBillMDL>
@{
    var objPagingmdl = (MDL.Common.BasicPagingMDL)ViewBag.paging;
    int SerialNo = (objPagingmdl.CurrentPage - 1) * objPagingmdl.RowParPage + 1;
}

<div class="col-md-12">
    <div class="table-responsive">
        <table cellspacing="0" cellpadding="0" border="0" class="table table-bordered table-hover" id="">
            <thead>
                <tr>
                    <th class="text-center text-nowrap">S.No.</th>
                    <th class="text-center text-nowrap">Student Name</th>
                    <th class="text-center text-nowrap">Class</th>
                    <th class="text-center text-nowrap">Father Name</th>
                    <th class="text-center text-nowrap">Mobile Number</th>
                    <th class="text-center text-nowrap">Address</th>
                    <th class="text-center text-nowrap">Action</th>


                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="14">
                            <div class="text-danger">NoRecordFound </div>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                @SerialNo
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.StudentName)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.ClassName)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.FatherName)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.MobileNumber)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td class="text-center">
                                <a class="btn btn-primary" href="@Url.Action("AddEditFeeBill", new { id = item.PK_BillId })">Pay Bill</a><br />
                            </td>
                        </tr>
                        SerialNo++;
                    }
                }
        </table>
    </div>
</div>

@Html.Partial("_Paging", (MDL.Common.BasicPagingMDL)ViewBag.paging)
