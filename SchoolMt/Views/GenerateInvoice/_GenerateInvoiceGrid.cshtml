@model List<MDL.GenerateInvoiceMDL>
@{
    int SerialNo = 1;
}
<div class="table-responsive">
    <table class="table table-bordered mb-0">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">Sr.No.</th>
                <th class="text-center">School</th>
                <th class="text-center">Class</th>
                <th class="text-center">Section</th>
                <th class="text-center">Student</th>
                <th class="text-center">Year</th>
                <th class="text-center">Month</th>
                <th class="text-center">Admission Fee</th>
                <th class="text-center">Tuition Fee</th>
                <th class="text-center">Bus Fee</th>
                <th class="text-center">Other Charges</th>
                <th class="text-center">Miscellaneous</th>
                <th class="text-center">Discount</th>
                <th class="text-center">Previous Due</th>
                <th class="text-center">Grand Total</th>
                <th class="text-center">In Cash</th>
                <th class="text-center">In Account</th>
                <th class="text-center">Total Due</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="14">
                        <div class="text-danger">No Record Found</div>
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
        <tr valign="middle">
            <td class="text-center">@SerialNo</td>
            <td class="text-center">@item.SchoolName</td>
            <td class="text-center">@item.ClassName</td>
            <td class="text-center">@item.Section</td>
            <td class="text-center">@item.StudentName</td>
            <td class="text-center">@item.YearName</td>
            <td class="text-center">@item.Month</td>
            <td class="text-center">@item.AdmissionFee</td>
            <td class="text-center">@item.TuitionFee</td>
            <td class="text-center">@item.BusFee</td>
            <td class="text-center">@item.OtherCharges</td>
            <td class="text-center">@item.Miscellaneous</td>
            <td class="text-center">@item.Discount</td>
            <td class="text-center">@item.PreviousDue</td>
            <td class="text-center">@item.GrandTotal</td>
            <td class="text-center">@item.InCash</td>
            <td class="text-center">@item.InAccount</td>
            <td class="text-center">@item.TotalDue</td>

        </tr>
                    SerialNo++;
                }
            }
        </tbody>
    </table>
</div>
@Html.Partial("_Paging", (MDL.Common.BasicPagingMDL)ViewBag.paging)
